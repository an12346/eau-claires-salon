@using Salon.Models;
@model List<Salon.Models.Client>;

<h1>Clients</h1>
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet</h3>
}

@foreach (Client client in Model)
{
  <li> @client.ClientName | @client.Stylist.StylistName</li>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Return to stylists", "Index", "Stylist")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>