@model Salon.Models.Stylist
<h1>Edit this Stylist: @Html.DisplayFor(model => model.StylistName)</h1>
<hr/>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)
  @Html.LabelFor(model => model.StylistName)
  @Html.EditorFor(model => model.StylistName)

  <input type="submit" value="save" class="btn"/>
}